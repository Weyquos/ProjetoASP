@inject Microsoft.AspNetCore.Identity.SignInManager<Usuario> SignInManager
@inject Microsoft.AspNetCore.Identity.UserManager<Usuario> UserManager

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" />

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index" asp-route-id="0"> Biblioteca </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Index" asp-controller="Livro">Livros</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Index" asp-controller="Categoria">Categorias</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="Index" asp-controller="Usuario">Usuários</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="MeusFavoritos" asp-controller="Home">Meus Favoritos</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" asp-action="MeusLivros" asp-controller="Home">Livros Alugados</a>
                </li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Logout" asp-controller="Usuario">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Login" asp-controller="Usuario">Login</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <br />

    <div class="container-fluid">
        @RenderBody()
    </div>

    <hr />
    <footer class="text-center">
        <p>
            Desenvolvido por Grupo Biblioteca - @DateTime.Now.Year - &copy;
        </p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>

</body>
</html>

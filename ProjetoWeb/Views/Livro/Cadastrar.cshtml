@model Livro 

    <form asp-action="Cadastrar" asp-controller="Livro" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend>Cadastrar Livro</legend>

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome">Nome: </label>
                <input class="form-control" asp-for="Nome" type="text" placeholder="Nome do Livro" />
                <span class="text-danger" asp-validation-for="Nome"></span>
            </div>

            <div class="form-group">
                <label asp-for="Autor">Autor: </label>
                <input class="form-control" asp-for="Autor" type="text" placeholder="Autor" />
                <span class="text-danger" asp-validation-for="Autor"></span>
            </div>

            <div class="form-group">
                <label asp-for="Editora">Editora: </label>
                <input class="form-control" asp-for="Editora" type="text" placeholder="Editora" />
                <span class="text-danger" asp-validation-for="Editora"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumPag">Número de Páginas: </label>
                <input class="form-control" asp-for="NumPag" type="text" placeholder="Número de Páginas" />
                <span class="text-danger" asp-validation-for="NumPag"></span>
            </div>

            <div class="form-group">
                <label asp-for="AnoPub">Ano de Publicação: </label>
                <input class="form-control" asp-for="AnoPub" type="text" placeholder="Ano de Publicação" />
                <span class="text-danger" asp-validation-for="AnoPub"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoriaId">Categoria: </label>
                <select class="form-control" asp-items="@ViewBag.Categorias" asp-for="CategoriaId">
                    <option> Selecione </option>          
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Imagem">Imagem: </label>
                <input class="form-control-file" type="file" name="file" />
            </div>

            <input type="submit" value="Cadastrar" class="btn btn-success" />
        </fieldset>
    </form>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>


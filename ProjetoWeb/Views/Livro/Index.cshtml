@model List<Livro>  

@* Assim faz um Comentário *@

<!DOCTYPE html>

<html>
<head>
    <title>Gerenciamento dos Livros</title>
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css" Biblioteca/>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"> Biblioteca </a>
    </nav> 

    <div class="container-fluid">
        <h4>Gerenciamento dos Livros</h4>

        <a asp-action="Cadastrar" asp-controller="Livro" class="btn btn-info">Cadastrar Livro</a> <br />

        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Autor</th>
                    <th>Editora</th>
                    <th>Quantidade</th>
                    <th>Número de Páginas</th>
                    <th>Ano de Publicação</th>
                    <th>Criado em</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Livro livroCadastrado in Model)
                {
                    <tr>
                        <td>@livroCadastrado.Nome</td>
                        <td>@livroCadastrado.Autor</td>
                        <td>@livroCadastrado.Editora</td>
                        <td>@livroCadastrado.Quantidade</td>
                        <td>@livroCadastrado.NumPag</td>
                        <td>@livroCadastrado.AnoPub</td>
                        <td>@livroCadastrado.CriadoEm</td>
                        <td> <a asp-action="Remover" asp-controller="Livro" asp-route-id="@livroCadastrado.Id" class="btn btn-danger">Remover</a> </td>
                        <td> <a asp-action="Alterar" asp-controller="Livro" asp-route-id="@livroCadastrado.Id" class="btn btn-warning">Alterar</a> </td>
                    </tr>
                }
            </tbody>
        </table>

        <span><b>Quantia de Livros Cadastrados: </b> @Model.Count </span> <br />
        <span><b>Dados Atualizados: </b> @DateTime.Now </span>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    </div>
</body>
</html>
